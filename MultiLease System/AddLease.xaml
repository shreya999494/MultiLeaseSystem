        xmlns:local="clr-namespace:MultiLease_System"
        mc:Ignorable="d"
        Title="AddLease" Height="381.139" Width="445.196">
    <Grid Margin="0,0,0,-76" Height="346" VerticalAlignment="Top">
        <TextBox x:Name="FirstPaymentDueBox" HorizontalAlignment="Left" Height="23" Margin="276,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="FirstPaymentDueBox_TextChanged"/>
