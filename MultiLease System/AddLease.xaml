        <Button x:Name="UpdateLease" Content="Update Lease" HorizontalAlignment="Left" Margin="311,308,0,0" VerticalAlignment="Top" Width="85" Click="UpdateLease_Click"/>
        <TextBox x:Name="LeaseIDBox" HorizontalAlignment="Left" Height="23" Margin="335,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" TextChanged="LeaseIDBox_TextChanged"/>
        <Label Content="Lease ID (for updates)" HorizontalAlignment="Left" Margin="18,257,0,0" VerticalAlignment="Top" Width="137"/>
